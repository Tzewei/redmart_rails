
<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User Review</th>
      <th>User ID</th>
      <th>Product ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.userreview %></td>
        <td><%= review.user.name %></td>
        <td><%= review.product.productname %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
      </tr>
    <% end %>

  </tbody>
  </table>

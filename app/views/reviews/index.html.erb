<h1>List of All Reviews</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Created Date</th>
                <th>Review</th>
                <th>Product Name</th>
                <th>User Name</th>
            </tr>
        </thead>
        <tbody>
            <% @reviews.each do |review| %>
            <tr>
                <td><%= review.created_at %></td>
                <td><%= review.userreview %></td>
                <td><%= review.product.productname %></td>
                <td><%= review.user.name %></td>
                <td><%= link_to 'Details', review %></td>

                <% if current_user.admin?%>
                <td><%= link_to 'Edit', edit_review_path(review) %></td>
                <td><% if current_user.admin? && !current_user?(user) %>
                    <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                </td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<%= link_to 'Back to Profile', current_user %>

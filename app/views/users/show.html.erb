<h1> Profile of <%= @user.name %> </h1>

<h3>Details: </h3>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.address %></td>
        <td><%= link_to 'Edit', edit_user_path(@user) %></td>
        <td>
          <% if current_user.admin?%>
            <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>


<% if @user.reviews.any? %>
  <h3><%= @user.name %> has a total of <%= @user.reviews.count %> reviews:</h3>

<div class="table-responsive">
  <table class="table">
      <thead>
        <tr>
          <th>Product Name </th>
          <th>Reviews </th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.product.productname %> </td>
            <td><%= review.userreview %> </td>
            <td><%= link_to 'Details', review_path %></td>
            <td><%= link_to 'Edit', edit_review_path(review) %></td>
            <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>

<%else%>
  <h3>User has no review!</h3>
<% end %>

<%= link_to 'Back to main', root_path %>
